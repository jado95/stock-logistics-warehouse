<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_stockevaluation_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=o.company_id.partner_id.lang)" />
            <div class="page">
                <div class="oe_structure"/>

                <h1 style="font-size: 44px;">
                    <span t-field="o.name"/>
                    <br/>
                    <span t-field="o.date"/>
                </h1>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="text-left">Stock Location</th>
                            <th class="text-left">Product</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">Average Weighted Product Unit Purchase Cost</th>
                            <th class="text-right">Value Line</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="total" t-value="0"/>
                        <t t-set="qty" t-value="0"/>
                        <t t-set="sum_average_purchase_cost" t-value="0"/>
                        <t t-set="value_line_cost" t-value="0"/>
                        <t t-set="sum_product_qty" t-value="0"/>
                        <t t-set="count_location" t-value="o.mapped('line_history_ids.location_id')"/>
                        <t t-foreach="count_location" t-as="location">
                            <t t-foreach="o.line_history_ids" t-as="line">
                                <t t-if="line.product_qty != 0">
                                    <t t-if="location == line.location_id">
                                        <t t-if="line.real_cost">
                                            <t t-set="value_line_cost" t-value="line.product_qty * line.real_cost"/>
                                        </t>
                                        <t t-else="">
                                            <t t-set="value_line_cost" t-value="line.product_qty * line.average_purchase_cost"/>
                                        </t>
                                        <t t-set="sum_average_purchase_cost" t-value="sum_average_purchase_cost + value_line_cost"/>
                                        <t t-set="total" t-value="total + value_line_cost"/>
                                        <t t-set="sum_product_qty" t-value="sum_product_qty + line.product_qty"/>
                                        <t t-set="qty" t-value="qty + line.product_qty"/>
                                        <tr>
                                            <td>
                                                <span t-field="line.location_id.display_name"/>
                                            </td>
                                            <td>
                                                <span t-field="line.product_id.display_name"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.product_qty"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.average_purchase_cost"/>
                                            </td>
                                            <td class="text-right">
                                                <span
                                                    t-esc="value_line_cost"
                                                    t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                            <t>
                                <tr class="text-right">
                                    <td style="border-left: 1px solid #fff; border-right: 1px solid #fff;">
                                        <strong class="mr16">Total <span t-esc="location.display_name"/> </strong>
                                    </td>
                                    <td colspan="2" style="border-right: 1px solid #fff;">
                                        <span t-esc="sum_product_qty"/>
                                    </td>
                                    <td colspan="2" style="border-right: 1px solid #fff;">
                                        <span
                                            t-esc="sum_average_purchase_cost"
                                            t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                            <t t-set="sum_average_purchase_cost" t-value="0"/>
                            <t t-set="value_line_cost" t-value="0"/>
                            <t t-set="sum_product_qty" t-value="0"/>
                        </t>
                        <t>
                            <tr class="text-right">
                                <td style="border-left: 1px solid #fff; border-right: 1px solid #fff; border-bottom: 1px solid #fff;">
                                    <strong class="mr16">Grand Total</strong>
                                </td>
                                <td colspan="2"
                                    style="border-right: 1px solid #fff; border-bottom: 1px solid #fff;">
                                    <span t-esc="qty"/>
                                </td>
                                <td colspan="2"
                                    style="border-right: 1px solid #fff; border-bottom: 1px solid #fff;">
                                    <span
                                        t-esc="total"
                                        t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <div class="oe_structure"/>
            </div>
        </t>
    </template>


    <template id="report_stockevaluation">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="product_cost_evaluation.report_stockevaluation_document" t-lang="o.company_id.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
